@model LoginModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Login-RegisterLayout.cshtml";
}

<style>
    .custom-label {
        padding-top: 15px;
        color: white;
        font-family: 'Montserrat';
        /* font-weight: bolder; */
        font-size: 17px;
        font-weight: bold;
        z-index: 99;
        opacity: 1;
    }
</style>

<div class="text-center container contact" id="request" style="margin-top:0">
    <div class="row">
        <div class="padding-left1">
            <div class="contact">
                <div class="titlepage">
                    <h2>Login</h2>
                </div>
                <form class="request" method="post" asp-action="Login" asp-controller="Account">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>
                    <div class="row  mt-3">
                        <div class="col-sm-4">
                            <label class="custom-label" asp-for="@Model.Email"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="contactus" asp-for="@Model.Email">
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>
                    </div>

                    <div class="row  mt-3">
                        <div class="col-sm-4">
                            <label class="custom-label" asp-for="@Model.Password"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="contactus" asp-for="@Model.Password">
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>
                    </div>

                    <div class="form-group mt-2">
                        <div class="custom-checkbox">
                            <label asp-for="@Model.IsPersistent" class="text-white">
                                <input asp-for="@Model.IsPersistent" />
                                @Html.DisplayNameFor(x => x.IsPersistent)
                            </label>
                        </div>
                        <span asp-validation-for="@Model.IsPersistent" class="text-danger"></span>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-12">
                            <button class="send">Login</button>
                        </div>
                    </div>
                    <div class="mt-4 text-white">
                        <p>
                            <a id="forgot-password" asp-action="ForgotPassword" asp-controller="Account" style="color:cornflowerblue">Forgotten your password?</a>
                        </p>
                        <p>
                            Dont have an Account <a asp-action="Register" style="color:cornflowerblue">SignUp</a>
                        </p>                       
                        <p>
                            CLick to go back to the  <a asp-action="Index" asp-controller="Home" style="color:cornflowerblue">HomePage</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>