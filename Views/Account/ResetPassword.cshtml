@model ResetPasswordModel;
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Login-RegisterLayout.cshtml";
}

<style>
    .custom-label {
        padding-top: 15px;
        color: white;
        font-family: 'Montserrat';
        /* font-weight: bolder; */
        font-size: 17px;
        font-weight: bold;
        z-index: 99;
        opacity: 1;
    }
</style>

<div class="text-center container contact" id="request" style="margin-top:0">
    <div class="row">
        <div class="padding-left1">
            <div class="contact">
                <div class="titlepage">
                    <h2>Reset Password</h2>
                </div>
                <form class="request" method="post" asp-action="ResetPassword" asp-controller="Account">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>
                    <input type="hidden" asp-for="Email" class="form-control" />
                    <input type="hidden" asp-for="Token" class="form-control" />
                    <div class="row  mt-3">
                        <div class="col-sm-4">
                            <label class="custom-label" asp-for="@Model.Password"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="contactus" asp-for="@Model.Password">
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>
                    </div>
                    <div class="row  mt-3">
                        <div class="col-sm-4">
                            <label class="custom-label" asp-for="@Model.ConfirmPassword"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="contactus" asp-for="@Model.ConfirmPassword">
                            <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-12">
                            <button class="send">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>