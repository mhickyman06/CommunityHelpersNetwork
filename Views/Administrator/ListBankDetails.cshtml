@model List<chnbankdetails>;

@{
    ViewData["Title"] = "Bank Details List";

    Layout = "_AdministratorPortalLayout";

}


<div class="container-fluid">
    <div class="mt-5">
        <div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Bank Details List</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="bankdetaisTable" class=" table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Bank Name </th>
                                <th>Bank AccountName</th>
                                <th>Bank AccountNumber</th>                            
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bank in Model)
                            {
                                <tr id="row_@bank.Id">
                                    <td>@bank.BankName</td>
                                    <td>@bank.BankAccountName</td>
                                    <td>@bank.BankAccountNumber</td>                                
                                    <td>
                                        <a class="btn btn-primary btn-sm mb-2" asp-action="EditBankDetails" asp-controller="Administrator" asp-route-Id="@bank.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                        <a class="btn btn-danger mb-2  btn-sm" href="#" onclick="ConfirmDelete('@bank.Id')">
                                            <i class=" fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title">Delete Banlk Details</h3>
                                    <a href="#" style="margin-left:auto" class="close" data-dismiss="modal">&times;</a>
                                </div>
                                <div class="modal-body">
                                    <h4 class="modal-bodycontent">Are you sure you want to delete this Bank Details?</h4>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                    <a href="#" class="btn btn-success" onclick="DeleteNews()">Confirm</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="hiddennewsid" />
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</div>

@section Scripts {
    <script>

     
        var ConfirmDelete = function (NewsId) {
            $("#hiddennewsid").val(NewsId);
            $("#myModal").modal('show');
        }



        var DeleteNews = function () {

            var userid = $("#hiddennewsid").val();

            $.ajax({
                type: "POST",
                url: "DeleteBankDetails",
                //dataType : "application/json",
                data: {
                    "Id": userid
                },
                success: function (result) {

                    $("#myModal").modal("hide");
                    $("#row_" + userid).remove();
                    $("#col_" + userid).remove();
                },
                error: function (errors) {
                    console.log(errors)
                }
            })
        }

    </script>
}