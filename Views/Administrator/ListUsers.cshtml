@model IOrderedQueryable<ApplicationUser>;

@{
    ViewData["Title"] = "Users List";

    Layout = "_AdministratorPortalLayout";

}
<div class="container-fluid">
    <div class="mt-5">
        <div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Users List</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="userstable" class=" table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Religion</th>
                                <th>Nationality</th>
                                <th>State</th>
                                <th>Local Government</th>
                                <th>Address</th>
                                <th>UserName</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Email Confirmed</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr id="row_@user.Id">
                                    <td>@user.Name</td>
                                    <td>@user.Age</td>
                                    <td>@user.Gender</td>
                                    <td>@user.Religion</td>
                                    <td>@user.Nationality</td>
                                    <td>@user.State</td>
                                    <td>@user.LocalGovt</td>
                                    <td>@user.Address</td>
                                    <td>@user.UserName</td>
                                    <td id="email_@user.Id">@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.EmailConfirmed</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm mb-2" asp-action="EditUser" asp-controller="Administrator" asp-route-Id="@user.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                        <a class="btn btn-danger mb-2  btn-sm" href="#" onclick="ConfirmDelete('@user.Id')">
                                            <i class=" fas fa-trash-alt"></i>
                                        </a>
                                        <a class="btn btn-info mb-2  btn-sm" asp-route-UserId="@user.Id" asp-action="SendUserMail" asp-controller="Administrator">
                                            @*onclick="ConfirmSendMail('@user.Id')"*@
                                            <i class=" fas fa-mail-bulk"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title">Delete User</h3>
                                    <a href="#" style="margin-left:auto" class="close" data-dismiss="modal">&times;</a>
                                </div>
                                <div class="modal-body">
                                    <h4 class="modal-bodycontent">Are you sure you want to delete this User?</h4>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                    <a href="#" class="btn btn-success" onclick="DeleteNews()">Confirm</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="mailmodal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title">Email Sender</h3>
                                    <a href="#" style="margin-left:auto" class="close" data-dismiss="modal">&times;</a>
                                </div>
                                <div class="modal-body">
                                    <form id="emailuser" enctype="multipart/form-data" method="post">
                                        <div class="row mb-3">
                                            <div class="form-group input-group">
                                                <div class="col-sm-4">
                                                    <label for="subject">Subject</label>
                                                </div>
                                                <div class="col-sm-7">
                                                    <input id="subject" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0; font-size:small" /><br />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="form-group input-group">
                                                <div class="col-sm-4">
                                                    <label for="body">Body</label>
                                                </div>
                                                <div class="col-sm-7">
                                                    <textarea id="body" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0;width:100%; height:120px;font-size:small"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="form-group input-group">
                                                <div class="col-sm-4">
                                                    <label for="attachments" class="form-label">Attachments</label>
                                                </div>
                                                <div class="col-sm-7">
                                                    @{
                                                        var id = "";
                                                        foreach (var item in Model)
                                                        {
                                                            id = item.Id;
                                                        }
                                                    }
                                                    <input id="attachments_@id" name="attachments" size="1" class="form-control custom-file-input " type="file" multiple />
                                                    <label class="control-label custom-file-label ">choose File</label><br />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <p class="text-center text-danger" id="errorMessagehead" style="display:none">Some error occured while processing your request</p>
                                            <p class="text-center text-danger" id="subjecterror" style="display:none"></p>
                                            <p class="text-center text-danger" id="bodyerror" style="display:none"></p>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-default" data-dismiss="modal" onclick="ClearError()">Cancel</a>
                                    <a href="#" class="btn btn-success" onclick="SendMail()" id="sendBtn" style="display:inherit">Send</a>
                                    <img src="~/Images/loading.gif" id="loadingBtn" style="height:50px;width:80px;display:none" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="hiddennewsid" />
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</div>

@section Scripts {
    <script>
        var userid = $("#hiddennewsid").val();

        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            })
        });

        var ConfirmDelete = function (NewsId) {
            $("#hiddennewsid").val(NewsId);
            $("#myModal").modal('show');
        }

        var ConfirmSendMail = function (NewsId) {
            $("#mailmodal").modal('show');
            $("#hiddennewsid").val(NewsId);
        }

        var ClearError = function () {
            $("#loadingBtn").css("display", "none");
            $("#sendBtn").css("display", "inherit");
            $("#errorMessagehead").css("display", "none");
            $("#subjecterror").css("display", "none");
            $("#bodyerror").css("display", "none");
            $("#subjecterror").empty();
            $("#bodyerror").empty();
        }

        var DeleteNews = function () {


            $.ajax({
                type: "POST",
                url: "RemoveUser",
                //dataType : "application/json",
                data: {
                    Id: userid
                },
                success: function (result) {

                    $("#myModal").modal("hide");
                    $("#row_" + userid).remove();
                    $("#col_" + userid).remove();
                },
                error: function (errors) {
                    console.log(errors)
                }
            })
        }
        var SendMail = function () {

            var input = $("#attachments_" + userid);
            var files = input.files;

            var attachments = new FormData();

            for (var i = 0; i != input.length; i++) {
                attachments.append("files", files[i]);

            }


            $("#errorMessagehead").css("display", "none");
            $("#subjecterror").css("display", "none");
            $("#bodyerror").css("display", "none");
            $("#subjecterror").empty();
            $("#bodyerror").empty();

            $("#sendBtn").css("display", "none");
            $("#loadingBtn").css("display", "inherit");
            var errormessage;
            var useremail = $("#email_" + $("#hiddennewsid").val()).text();
            console.log("#email_" + $("#hiddennewsid").val());
            var subject = $("#subject").val();
            var body = $("#body").val();
            //var attachments = $("#attachments").val();
            const model = {
                ToEmail: useremail,
                Subject: subject,
                Body: body,
                Attachments: attachments
            }
            $.ajax({
                type: "POST",
                url: "/api/Administrator/SendUserMail",
                //dataType : "application/json",
                contentType: "applicaion/x-www-form-urlencoded",
                data: model,
                success: function (result) {
                    console.log(result);
                    alert(result.message);
                    errormessage = result.error;
                    $("#sendBtn").css("display", "inherit");
                    $("#loadingBtn").css("display", "none");
                    $("#errorMessagehead").css("display", "none");
                    $("#subjecterror").css("display", "none");
                    $("#bodyerror").css("display", "none");

                    $("subjecterror").empty();
                    $("bodyerror").empty();

                    $("#mailmodal").modal("hide");
                },
                error: function (errors) {
                    $("#sendBtn").css("display", "inherit");
                    $("#loadingBtn").css("display", "none");
                    $("#errorMessagehead").css("display", "inherit");
                    $("#subjecterror").css("display", "inherit");
                    $("#subjecterror").text(errors.responseJSON.Body);
                    $("#bodyerror").css("display", "inherit");
                    $("#bodyerror").text(errors.responseJSON.Subject);
                    console.log(errors);
                    console.log(errormessage);
                }
            });
        }
    </script>
}