@model CreateNewsViewModel;

@{

    ViewData["Title"] = "Create News";
    Layout = "_AdministratorPortalLayout";
}


<div class="container-fluid">
    <div class="mb-2">
        <h4>Create News</h4>
    </div>
    <div style="margin-top:100px">
        <form id="CreateNews" asp-action="CreateNews" asp-controller="Administrator" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.PageTtile"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.PageTtile" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0" /><br />
                        <span asp-validation-for="@Model.PageTtile" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Title"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.Title" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0" /><br />
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.ShortDescription"></label>
                    </div>
                    <div class="col-sm-7">
                        <textarea id="shortbio" asp-for="@Model.ShortDescription" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0;width:100%; height:120px"></textarea>
                        <span asp-validation-for="@Model.ShortDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Body"></label>
                    </div>
                    <div class="col-sm-7">
                        <textarea id="shortbio" asp-for="@Model.Body" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0;width:100%; height:120px"></textarea>
                        <span asp-validation-for="@Model.Body" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.imagepath" class="form-label"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.imagepath" class="form-control custom-file-input " />
                        <label class="control-label custom-file-label ">choose File</label><br />
                        <span asp-validation-for="@Model.imagepath" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary" style="border-radius:15px;border:none">Submit</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            })
        });
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}