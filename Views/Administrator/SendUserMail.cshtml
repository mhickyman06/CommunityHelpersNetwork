@model SendMailViewModel;

@{
    ViewData["Title"] = "Send Mail";
    Layout = "_AdministratorPortalLayout";
}


<div class="container-fluid">
    <div class="mb-2">
        <h4>Send Mail</h4>
    </div>
    <div style="margin-top:100px">
        <form id="EditBranch" asp-action="SendUserMail" asp-controller="Administrator" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.UserId" />
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.ToEmail"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.ToEmail" disabled class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0" /><br />
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Subject"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.Subject" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0" /><br />
                        <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Body"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.Body" class="form-control" style="border-bottom-left-radius:0;border-top-left-radius:0" /><br />
                        <span asp-validation-for="@Model.Body" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group input-group">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Attachments" class="form-label"></label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.Attachments" class="form-control custom-file-input " />
                        <label class="control-label custom-file-label ">choose File</label><br />
                        <span asp-validation-for="@Model.Attachments" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary" style="border-radius:15px;border:none">Submit</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            })
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}