@model NewsModel

@{
    ViewData["Title"] = "NewsDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .details-p {
        font-family: "Montserrat";
        font-weight: 400;
        font-size: larger;
    }
    .mean-container .mean-bar {
        background-color: #4e7b88;
    }
</style>
<header>
    <div class="header" style="background-color: #023041; top: 0px; position: fixed; z-index: 999; width: 100%">
        @{
            await Html.RenderPartialAsync("_MenuBar");
        }
    </div>
</header>
<div style="margin-top:100px">
    <div class="home-page-welcome">
        <h3 class="mt-2 h-st b-h2">@Model.PageTtile</h3>
    </div>
</div>

<div class="container m-4 ">
    <div class="mr-0">
        <div class="row">
            <div class="col-10">
                <img style="width:100%;height:400px" asp-append-version="true" class="mt-2" src="~/ContentImages/@Model.ImagePath" />
            </div>
        </div>
        <div class="mt-3">
            <h6 style="color:#ff6a00">@Model.DatePublished</h6>
            <h5 class="mt-2"><b>@Model.Title</b></h5>
            <p class="mt-3 details-p">@Model.Body</p>
        </div>
    </div>
</div>
