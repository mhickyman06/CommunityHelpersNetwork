@model List<chnbankdetails>;
@{
    ViewData["Title"] = "Donate";
    Layout = "~/Views/Shared/_Login-RegisterLayout.cshtml";
}

<style>

    .donate-top1 {
        /*z-index: 99;*/
        background: url(../Images/carousel-img1.jpg);
        background-size: cover;
        background-position: top;
        background-repeat: no-repeat;
        padding-bottom: 90px;
        /*height: 700px;*/
        height: -webkit-fill-available;
    }

    .donate-top1::after {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        /*height: 700px;*/
        height: -webkit-fill-available;
        background: rgba(0,0,0,.7);
        z-index: 9;
    }
    .custom-label {
        padding-top: 15px;
        color: white;
        font-family: 'Montserrat';
        /* font-weight: bolder; */
        font-size: 17px;
        font-weight: bold;
        z-index: 99;
        opacity: 1;
    }

    .donate-block {
        font-family: "Monteserrat";
        color: black;
        font-weight: 500;
        /*width: 50%;*/
    }

    .donate-text {
        text-align: center;
        font-family: "Montserrat"
    }

    .donate-text h1, .donate-text p {
        font-weight: 600;
        font-size:xx-large;
        color:white;
    }

    .container {
        padding-top: 80px;
        padding-bottom: 100px;
    }

    .donate {
        position: relative;
        /*left: 3000px;*/
        z-index: 99;
    }
    /*.welcome-text{
        left:0;
    }*/
</style>

    
<div class="donate-top1"> 
    <div class=" donate " >      
        <div class="text-center container donate-block">
            <div>
                <div>
                    @foreach (var bank in Model)
                     {
                         <div class="mt-3 mb-4 container donate-text mb-4 wow fadeInLeft" data-wow-delay="0.2s">
                            <h1><span class="mb-2">Bank: </span><span>@bank.BankName</span></h1>
                            <div class="mt-5 row">
                                <div class="col-sm-5 p-0 mb-4">
                                    <p>Account Name:</p>
                                </div>
                                <div class="col-sm-5 p-0">
                                    <p>@bank.BankAccountName</p>
                                </div>
                                @*<span class="mb-2"> </span><span>@bank.BankAccountName</span>*@
                            </div>
                            <div class="mt-5 row">
                                <div class="col-sm-5 p-0 mb-4">
                                    <p>Account Number:</p>
                                </div>
                                <div class="col-sm-5 p-0">
                                    <p>@bank.BankAccountNumber</p>
                                </div>
                                @*<span class="mb-2"> </span><span>@bank.BankAccountName</span>*@
                            </div>
                        @*<p class="mt-5"><span class="mb-2">Account Number: </span><span>@bank.BankAccountNumber</span></p>*@
                         </div>
                     }
                </div>
            </div>
        </div>
    </div>
</div>
