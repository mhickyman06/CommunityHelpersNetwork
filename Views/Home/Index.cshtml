<!--Latest Event-->
<div class="wrapper row2 " style="background-color:#6f838a;margin-bottom:200px">
    <section class="hoc container clear">
        <div class="sectiontitle" style="position:relative; z-index:99; color:white">
            <h6 class="heading" style="color:white;font-weight:800">Community Latest News and Event</h6>
        </div>
        <div class="group latest ">
            @{                
                 var firstevent = Model.News?.FirstOrDefault();
                <article class="one_third first wow fadeInLeft" data-wow-delay="0.1s">
                    <img src="~/content/Images/@firstevent?.ImagePath" style="width:-webkit-fill-available;height:185px" alt="">
                    <div class="txtwrap">
                        <h6 class="heading" style="font-weight:600;font-size:medium">@firstevent?.Title</h6>
                        <time class="font-xs block btmspace-10" style="color:#4ac9f0;text-shadow:0 0 #4ac9f0" datetime="@firstevent?.DatePublished.ToString("dd/MM/yyyy HH:mm")">@firstevent?.DatePublished.ToString("dd/MM/yyyy HH:mm")</time>
                        <p>@firstevent?.ShortDescription</p>
                        <footer><a asp-action="NewsDetails" asp-controller="News"  asp-route-id="@firstevent.Id"  style="color: #4ac9f0;text-shadow:0 0 #4ac9f0">Read More</a></footer>
                    </div>
                </article>
                if (Model.News != null)
                {
                    var events = @Model.News.GetRange(1, 2);
                    foreach (var Event in events)
                    {
                        <article class="one_third wow fadeInLeft" data-wow-delay="0.1s">
                            <img src="~/content/Images/@Event.ImagePath" style="width:-webkit-fill-available;height:185px" alt="">
                            <div class="txtwrap">
                                <h6 class="heading" style="font-weight:600;font-size:medium">@Event.Title</h6>
                                <time class="font-xs block btmspace-10" style="color:#4ac9f0;text-shadow:0 0 #4ac9f0" datetime="@Event?.DatePublished.ToString("dd/MM/yyyy HH:mm")">@Event?.DatePublished.ToString("dd/MM/yyyy HH:mm")</time>
                                <p>@Event?.ShortDescription</p>
                                <footer><a asp-action="NewsDetails" asp-controller="News" asp-route-id="@Event.Id" style="color:#4ac9f0;text-shadow:0 0 #4ac9f0">Read More</a></footer>
                            </div>
                        </article>
                    }
                }

            }
        </div>
        <a class="btn btn-lg news-btn  text-center text-white mt-3" asp-action="News" asp-controller="Home" style="position:relative; left:50%">See more</a>
    </section>
</div>

