@model PagingList<ApplicationUser>;

@{
    ViewData["Title"] = "Users List";

    Layout = "_AdministratorPortalLayout";

}


<div class="container-fluid">
    <div class="mt-5">
        <div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">News List</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Religion</th>
                                <th>Nationality</th>
                                <th>State</th>
                                <th>Local Government</th>
                                <th>Address</th>
                                <th>UserName</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Email Confirmed</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr id="row_@user.Id">
                                    <td>@user.Name</td>
                                    <td>@user.Age</td>
                                    <td>@user.Gender</td>
                                    <td>@user.Religion</td>
                                    <td>@user.Nationality</td>
                                    <td>@user.State</td>
                                    <td>@user.LocalGovt</td>
                                    <td>@user.Address</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.EmailConfirmed</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-action="EditUser" asp-controller="Administrator" asp-route-Id="@user.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                        <a class="btn btn-danger  btn-sm" href="#" onclick="ConfirmDelete('@user.Id')">
                                            <i class=" fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title">Delete User</h3>
                                    <a href="#" style="margin-left:auto" class="close" data-dismiss="modal">&times;</a>
                                </div>
                                <div class="modal-body">
                                    <h4 class="modal-bodycontent">Are you sure you want to delete this User?</h4>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                    <a href="#" class="btn btn-success" onclick="DeleteNews()">Confirm</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="hiddennewsid" />
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <div class="mt-5 text-center">
        <nav aria-label="ListMembers navigation example">
            <vc:pager paging-list="@Model" />
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        var ConfirmDelete = function (NewsId) {
            $("#hiddennewsid").val(NewsId);
            $("#myModal").modal('show');
        }


        var DeleteNews = function () {

            var userid = $("#hiddennewsid").val();

            $.ajax({
                type: "POST",
                url: "RemoveUser",
                //dataType : "application/json",
                data: {
                    Id: userid
                },
                success: function (result) {

                    $("#myModal").modal("hide");
                    $("#row_" + userid).remove();
                    $("#col_" + userid).remove();
                },
                 error: function (errors) {
                    console.log(errors)
                }
            })
        }
    </script>
}